<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    >


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_chat_bubble_outline_24" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="20"
                app:srcCompat="@drawable/group_black_24dp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/view_comfy_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="visible"
                android:padding="16dp"
                android:id="@+id/linear1"
                android:background="@drawable/background_brown"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/van" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="You"
                    android:drawableEnd="@drawable/ic_baseline_mic_off"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:background="@drawable/background_grad"
                android:padding="16dp"
                android:visibility="gone"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/har" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginTop="55dp"
                    android:text="William Glen Harold Herrington, known professionally as Billy Herrington"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:drawableEnd="@drawable/ic_baseline_mic_off"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linear4"
                android:padding="16dp"
                android:background="@drawable/background_brown"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/maxresdefault" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginTop="55dp"
                    android:text="You"
                    android:drawableEnd="@drawable/ic_baseline_mic_off"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/linear2"
                android:background="@drawable/background_grad"
                android:padding="16dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/har" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginTop="55dp"
                    android:text="William Glen Harold Herrington, known professionally as Billy Herrington"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:drawableEnd="@drawable/ic_baseline_mic_off"
                    android:layout_gravity="center_horizontal"
                />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_gravity="bottom"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="7dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/background_icons_white"
                app:srcCompat="@drawable/ic_baseline_videocam_off_24"
                />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_gravity="bottom"
                android:background="@drawable/background_icons_white"
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="7dp"
                android:layout_margin="16dp"
                app:srcCompat="@drawable/ic_baseline_mic_off_24" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_gravity="bottom"
                android:background="@drawable/background_icons_grey"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="7dp"
                android:layout_margin="16dp"
                android:layout_weight="1"

                app:srcCompat="@drawable/ic_baseline_waving_hand_24" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_gravity="bottom"
                android:background="@drawable/background_icons_red"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="7dp"
                android:layout_margin="16dp"
                android:layout_weight="1"

                app:srcCompat="@drawable/ic_baseline_call_end_24" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>